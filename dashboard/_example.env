# *************************
#* Database               *
# *************************
DB_HOST=postgres
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=faivor

# Auth
# Run with `npx auth secret` to generate a new secret
AUTH_SECRET="" # Added by `npx auth`. Read more: https://cli.authjs.dev

# FAIVOR ML Validator backend URL
PUBLIC_VALIDATOR_URL=http://localhost:8000

# CORS: Allowed origins for cross-origin API requests
# Required for production deployments accessed from different domains
# Supports comma-separated list for multiple origins (e.g., staging + production)
# Example: "https://faivor.example.com,https://staging.faivor.example.com"
# If not set, only same-origin requests are allowed (secure default)
PUBLIC_DASHBOARD_ORIGIN=http://localhost:3000

# Application Settings
PUBLIC_ORGANIZATION_NAME="FAIVOR"
NODE_ENV="development"