{
  "name": "faivor",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "start": "bun run build/index.js",
    "migrate": "source .env && DATABASE_URL=postgres://$DB_USER:$DB_PASSWORD@$DB_HOST:$DB_PORT/$DB_NAME node-pg-migrate",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "prettier --check . && eslint .",
    "format": "prettier --write .",
    "postbuild": "vite build --mode preview",
    "seed:dev": "source .env.local && psql $DATABASE_URL -f seed-database/seed.sql",
    "seed:clean": "source .env.local && psql $DATABASE_URL -f seed-database/seed.sql",
    "seed:docker": "docker compose exec postgres psql -U postgres -d faivor -f /seed-database/seed.sql"
  },
  "devDependencies": {
    "@sveltejs/kit": "^2.13.0",
    "@sveltejs/vite-plugin-svelte": "^5.0.3",
    "@tailwindcss/container-queries": "^0.1.1",
    "@tailwindcss/forms": "^0.5.9",
    "@tailwindcss/typography": "^0.5.15",
    "@types/eslint": "^9.6.1",
    "@types/node": "^22.10.10",
    "@typescript-eslint/eslint-plugin": "^8.18.1",
    "@typescript-eslint/parser": "^8.18.1",
    "@vcarl/remark-headings": "^0.1.0",
    "autoprefixer": "^10.4.20",
    "daisyui": "^4.12.22",
    "dotenv": "^16.4.7",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-svelte": "^2.46.1",
    "fs-extra": "^11.2.0",
    "glob": "^11.0.0",
    "idb": "^8.0.1",
    "mdsvex": "^0.12.3",
    "mdsvex-relative-images": "^1.0.3",
    "postcss": "^8.4.49",
    "prettier": "^3.4.2",
    "prettier-plugin-svelte": "^3.3.2",
    "prettier-plugin-tailwindcss": "^0.6.9",
    "rehype-autolink-headings": "^7.1.0",
    "rehype-slug": "^6.0.0",
    "remark-external-links": "^9.0.1",
    "remark-reading-time": "^2.0.1",
    "remark-toc": "^9.0.0",
    "svelte": "^5.15.0",
    "svelte-adapter-bun": "^0.5.2",
    "svelte-check": "^4.1.1",
    "svelte-preprocess-import-assets": "^1.1.0",
    "svelte-youtube-embed": "^0.4.2",
    "tailwindcss": "^3.4.17",
    "tslib": "^2.8.1",
    "typescript": "^5.7.2",
    "unist-util-visit": "^5.0.0",
    "unplugin-icons": "^0.22.0",
    "vite": "^6.0.5",
    "vite-plugin-restart": "^0.4.2",
    "vite-plugin-static-copy": "^2.2.0",
    "vitest": "^2.1.8"
  },
  "type": "module",
  "dependencies": {
    "@auth/pg-adapter": "^1.7.4",
    "@auth/sveltekit": "^1.7.4",
    "@google/generative-ai": "^0.21.0",
    "@iconify/json": "^2.2.294",
    "@types/bcryptjs": "^2.4.6",
    "@types/sortablejs": "^1.15.8",
    "bcryptjs": "^2.4.3",
    "chart.js": "^4.5.0",
    "chartjs-adapter-date-fns": "^3.0.0",
    "date-fns": "^4.1.0",
    "node-html-parser": "^6.1.13",
    "node-pg-migrate": "^7.8.0",
    "pg": "^8.13.1",
    "pg-native": "^3.2.0",
    "postgres": "^3.4.5",
    "svelte-french-toast": "^1.2.0",
    "svelte-persisted-store": "^0.12.0",
    "theme-change": "^2.5.0",
    "vanilla-tilt": "^1.8.1"
  }
}
