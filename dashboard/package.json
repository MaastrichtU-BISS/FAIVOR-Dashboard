{
  "name": "faivor",
  "version": "1.15.5",
  "private": true,
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "start": "bun run build/index.js",
    "migrate": "source .env && DATABASE_URL=postgres://$DB_USER:$DB_PASSWORD@$DB_HOST:$DB_PORT/$DB_NAME node-pg-migrate",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "prettier --check . && eslint .",
    "format": "prettier --write .",
    "postbuild": "vite build --mode preview",
    "seed:dev": "source .env.local && psql $DATABASE_URL -f seed-database/seed.sql",
    "seed:clean": "source .env.local && psql $DATABASE_URL -f seed-database/seed.sql",
    "seed:docker": "docker compose exec postgres psql -U postgres -d faivor -f /seed-database/seed.sql",
    "test": "NODE_ENV=test bun test",
    "test:watch": "NODE_ENV=test bun test --watch",
    "test:coverage": "NODE_ENV=test bun test --coverage --coverage-reporter=html --coverage-reporter=text-summary",
    "test:unit": "NODE_ENV=test bun test test/unit",
    "test:integration": "NODE_ENV=test bun test test/integration"
  },
  "devDependencies": {
    "@sveltejs/kit": "^2.49.1",
    "@sveltejs/vite-plugin-svelte": "^5.1.1",
    "@tailwindcss/vite": "^4.0.0",
    "@types/eslint": "^9.6.1",
    "@types/node": "^22.19.1",
    "@typescript-eslint/eslint-plugin": "^8.49.0",
    "@typescript-eslint/parser": "^8.49.0",
    "@vcarl/remark-headings": "^0.1.0",
    "daisyui": "^5.0.0",
    "dotenv": "^16.6.1",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^9.1.2",
    "eslint-plugin-svelte": "^2.46.1",
    "fs-extra": "^11.3.2",
    "glob": "^11.1.0",
    "idb": "^8.0.3",
    "mdsvex": "^0.12.6",
    "mdsvex-relative-images": "^1.0.3",
    "prettier": "^3.7.4",
    "prettier-plugin-svelte": "^3.4.0",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "rehype-autolink-headings": "^7.1.0",
    "rehype-slug": "^6.0.0",
    "remark-external-links": "^9.0.1",
    "remark-reading-time": "^2.0.2",
    "remark-toc": "^9.0.0",
    "svelte": "^5.45.6",
    "svelte-adapter-bun": "^1.0.1",
    "svelte-check": "^4.3.4",
    "svelte-preprocess-import-assets": "^1.1.0",
    "svelte-youtube-embed": "^0.4.6",
    "tailwindcss": "^4.0.0",
    "tslib": "^2.8.1",
    "typescript": "^5.9.3",
    "unist-util-visit": "^5.0.0",
    "unplugin-icons": "^22.5.0",
    "vite": "^6.4.1",
    "vite-plugin-restart": "^2.0.0",
    "vite-plugin-static-copy": "^2.3.2",
    "vitest": "^2.1.9"
  },
  "type": "module",
  "dependencies": {
    "@auth/pg-adapter": "^1.11.1",
    "@auth/sveltekit": "^1.11.1",
    "@floating-ui/dom": "^1.7.4",
    "@google/generative-ai": "^0.21.0",
    "@iconify/json": "^2.2.416",
    "@types/bcryptjs": "^2.4.6",
    "@types/sortablejs": "^1.15.8",
    "bcryptjs": "^2.4.3",
    "chart.js": "^4.5.0",
    "chartjs-adapter-date-fns": "^3.0.0",
    "date-fns": "^4.1.0",
    "jspdf": "^3.0.4",
    "jspdf-autotable": "^5.0.2",
    "node-html-parser": "^6.1.13",
    "node-pg-migrate": "^7.8.0",
    "pg": "^8.13.1",
    "pg-native": "^3.2.0",
    "postgres": "^3.4.7",
    "svelte-french-toast": "^1.2.0",
    "svelte-persisted-store": "^0.12.0",
    "theme-change": "^2.5.0",
    "vanilla-tilt": "^1.8.1"
  }
}
