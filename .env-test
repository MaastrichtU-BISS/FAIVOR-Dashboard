# *************************
#* Database               *
# *************************
DB_HOST=postgres
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=faivor

# Auth
# Run with `npx auth secret` to generate a new secret
AUTH_SECRET="P2h0XbP1YjsybIaOdopsxbJVe/acFxfT05sPoBVQkbQ=" # Added by `npx auth`. Read more: https://cli.authjs.dev
AUTH_TRUST_HOST=true
# Auth URL for proper redirects (set to your public domain when behind reverse proxy)
AUTH_URL="https://your-domain.com"

# Application Settings
PUBLIC_ORGANIZATION_NAME="FAIVOR"
NODE_ENV="development"

# SvelteKit Configuration
# Explicitly set the origin for CSRF protection behind reverse proxy
ORIGIN="https://your-domain.com"
PROTOCOL_HEADER="x-forwarded-proto"
HOST_HEADER="x-forwarded-host"

# Backend API Configuration
# FAIVOR_BACKEND_URL: Internal URL for server-side proxy to reach the ML validator
# In Docker: use the service name (faivor-backend:8000)
# In local dev: use localhost:8000
FAIVOR_BACKEND_URL="http://faivor-backend:8000"

# PUBLIC_FAIVOR_BACKEND_URL: Browser-side URL (uses proxy endpoint by default)
# Leave commented to use the default proxy endpoint (/api/faivor-backend)
# PUBLIC_FAIVOR_BACKEND_URL="/api/faivor-backend"

# CORS Configuration (for reverse proxy deployments)
# Comma-separated list of allowed origins
# For production behind reverse proxy, set this to your actual domain(s)
# Example: "https://yourdomain.com,https://app.yourdomain.com"
ALLOWED_ORIGINS="https://your-domain.com"